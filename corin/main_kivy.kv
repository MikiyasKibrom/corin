        size_hint: 0, .2
        font_size: 20
    Spinner:
        id: number2
        text: 'True/False'
        values: {'True', 'False'}
        pos_hint: {'x': .06, 'top': .45}
        size_hint: .2, .08
    Label:
        text: '3'
